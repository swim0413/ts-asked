{
  "compilerOptions": {                         
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017", 
    "moduleResolution": "node",
    "outDir": "dist", 
    "baseUrl": ".",                   
    "sourceMap": true,                     
    "downlevelIteration": true,
    "noImplicitAny": false,
     "paths": { "*": ["node_modules/*"] } 
  },
  "include": ["src/**/*"]
}